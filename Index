            fileContent += `‡¶Ü‡¶¨‡ßá‡¶¶‡¶®‡ßá‡¶∞ ‡¶ï‡¶æ‡¶∞‡¶£: ${formObject.reason}\n`;
            fileContent += `‡¶≠‡ßç‡¶∞‡¶Æ‡¶£ ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶∏‡¶ï‡ßç‡¶∑‡¶Æ‡¶§‡¶æ: ${formObject.can_travel}\n`;
            fileContent += `‡¶¶‡ßà‡¶®‡¶ø‡¶ï ‡¶∏‡¶Æ‡ßü: ${formObject.daily_time || 'N/A'}\n`;
            fileContent += `‡¶Ö‡¶™‡¶∞‡¶æ‡¶ß‡¶Æ‡ßÇ‡¶≤‡¶ï ‡¶∞‡ßá‡¶ï‡¶∞‡ßç‡¶°: ${formObject.criminal_record}\n\n`;
            
            fileContent += 'üìä **‡¶Æ‡ßá‡¶ü‡¶æ‡¶°‡¶æ‡¶ü‡¶æ:**\n';
            fileContent += '='.repeat(30) + '\n';
            fileContent += `‡¶ú‡¶Æ‡¶æ‡¶∞ ‡¶§‡¶æ‡¶∞‡¶ø‡¶ñ: ${new Date().toLocaleString('bn-BD')}\n`;
            fileContent += `‡¶Ü‡¶á‡¶™‡¶ø ‡¶†‡¶ø‡¶ï‡¶æ‡¶®‡¶æ: ${window.userIP || 'N/A'}\n`;
            fileContent += `‡¶°‡¶ø‡¶≠‡¶æ‡¶á‡¶∏: ${isMobile() ? '‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤' : '‡¶°‡ßá‡¶∏‡ßç‡¶ï‡¶ü‡¶™'}\n`;
            
            fileContent += '\n' + '='.repeat(60) + '\n';
            fileContent += '        Cyber Sentinel Bangladesh (CSB)\n';
            fileContent += '='.repeat(60) + '\n';
            
            return fileContent;
        }

        // Generate PDF from form data
        async function generatePDF(formObject) {
            return new Promise((resolve) => {
                const pdf = new jsPDF('p', 'mm', 'a4');
                const pageWidth = pdf.internal.pageSize.getWidth();
                
                // Add CSB Header Banner (if available)
                const bannerUrl = 'https://images.unsplash.com/photo-1550745165-9bc0b252726f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1280&h=327&q=80';
                
                // Add header with CSB logo placeholder
                pdf.setFillColor(5, 5, 8);
                pdf.rect(0, 0, pageWidth, 30, 'F');
                
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(24);
                pdf.setFont('helvetica', 'bold');
                pdf.text('Cyber Sentinel Bangladesh', pageWidth / 2, 20, { align: 'center' });
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(16);
                pdf.text('‡¶∞‡¶ø‡ßü‡ßá‡¶≤ ‡¶≤‡¶æ‡¶á‡¶´ ‡¶è‡¶ú‡ßá‡¶®‡ßç‡¶ü ‡¶Ü‡¶¨‡ßá‡¶¶‡¶® ‡¶´‡¶∞‡ßç‡¶Æ', pageWidth / 2, 28, { align: 'center' });
                
                // Add horizontal line
                pdf.setDrawColor(0, 212, 255);
                pdf.setLineWidth(0.5);
                pdf.line(20, 35, pageWidth - 20, 35);
                
                let yPosition = 45;
                
                // Personal Information Section
                pdf.setFillColor(16, 16, 26);
                pdf.roundedRect(15, yPosition - 8, pageWidth - 30, 15, 3, 3, 'F');
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(14);
                pdf.setFont('helvetica', 'bold');
                pdf.text('‡ßß. ‡¶¨‡ßç‡¶Ø‡¶ï‡ßç‡¶§‡¶ø‡¶ó‡¶§ ‡¶§‡¶•‡ßç‡¶Ø (Personal Info)', 20, yPosition);
                yPosition += 15;
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(11);
                pdf.setFont('helvetica', 'normal');
                
                const personalInfo = [
                    [`‡¶®‡¶æ‡¶Æ: ${formObject.name_bn}`, `‡¶™‡¶ø‡¶§‡¶æ‡¶∞ ‡¶®‡¶æ‡¶Æ: ${formObject.father_name}`],
                    [`‡¶ú‡¶®‡ßç‡¶Æ ‡¶§‡¶æ‡¶∞‡¶ø‡¶ñ: ${formatDate(formObject.dob)}`, `‡¶¨‡ßü‡¶∏: ${formObject.age} ‡¶¨‡¶õ‡¶∞`],
                    [`NID/‡¶ú‡¶®‡ßç‡¶Æ ‡¶®‡¶ø‡¶¨‡¶®‡ßç‡¶ß‡¶®: ${formObject.nid_no}`, `‡¶∞‡¶ï‡ßç‡¶§‡ßá‡¶∞ ‡¶ó‡ßç‡¶∞‡ßÅ‡¶™: ${formObject.blood_group || 'N/A'}`]
                ];
                
                personalInfo.forEach(row => {
                    pdf.text(row[0], 20, yPosition);
                    if (row[1]) {
                        pdf.text(row[1], pageWidth / 2 + 10, yPosition);
                    }
                    yPosition += 8;
                });
                
                yPosition += 5;
                
                // Contact Information Section
                pdf.setFillColor(16, 16, 26);
                pdf.roundedRect(15, yPosition - 8, pageWidth - 30, 15, 3, 3, 'F');
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(14);
                pdf.setFont('helvetica', 'bold');
                pdf.text('‡ß®. ‡¶Ø‡ßã‡¶ó‡¶æ‡¶Ø‡ßã‡¶ó‡ßá‡¶∞ ‡¶§‡¶•‡ßç‡¶Ø', 20, yPosition);
                yPosition += 15;
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(11);
                pdf.setFont('helvetica', 'normal');
                
                const contactInfo = [
                    [`‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤: ${formObject.mobile}`, `‡¶π‡ßã‡ßü‡¶æ‡¶ü‡¶∏‡¶Ö‡ßç‡¶Ø‡¶æ‡¶™: ${formObject.whatsapp || 'N/A'}`],
                    [`‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ: ${formObject.telegram}`, `‡¶´‡ßá‡¶∏‡¶¨‡ßÅ‡¶ï: ${formObject.fb_link}`],
                    [`‡¶á‡¶Æ‡ßá‡¶á‡¶≤: ${formObject.email || 'N/A'}`, `‡¶Ö‡¶≠‡¶ø‡¶≠‡¶æ‡¶¨‡¶ï‡ßá‡¶∞ ‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤: ${formObject.guardian_mobile}`]
                ];
                
                contactInfo.forEach(row => {
                    pdf.text(row[0], 20, yPosition);
                    if (row[1]) {
                        pdf.text(row[1], pageWidth / 2 + 10, yPosition);
                    }
                    yPosition += 8;
                });
                
                yPosition += 5;
                
                // Address Section
                pdf.setFillColor(16, 16, 26);
                pdf.roundedRect(15, yPosition - 8, pageWidth - 30, 15, 3, 3, 'F');
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(14);
                pdf.setFont('helvetica', 'bold');
                pdf.text('‡ß©. ‡¶†‡¶ø‡¶ï‡¶æ‡¶®‡¶æ ‡¶ì ‡¶Ö‡¶¨‡¶∏‡ßç‡¶•‡¶æ‡¶®', 20, yPosition);
                yPosition += 15;
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(11);
                pdf.setFont('helvetica', 'normal');
                
                pdf.text(`‡¶ú‡ßá‡¶≤‡¶æ: ${formObject.district}`, 20, yPosition);
                pdf.text(`‡¶™‡ßç‡¶∞‡¶¨‡¶æ‡¶∏‡ßÄ: ${formObject.is_expat}`, pageWidth / 2 + 10, yPosition);
                yPosition += 8;
                
                pdf.text(`‡¶¨‡¶∞‡ßç‡¶§‡¶Æ‡¶æ‡¶® ‡¶†‡¶ø‡¶ï‡¶æ‡¶®‡¶æ: ${formObject.present_address}`, 20, yPosition);
                yPosition += formObject.present_address.length > 50 ? 16 : 8;
                
                pdf.text(`‡¶∏‡ßç‡¶•‡¶æ‡ßü‡ßÄ ‡¶†‡¶ø‡¶ï‡¶æ‡¶®‡¶æ: ${formObject.permanent_address}`, 20, yPosition);
                yPosition += formObject.permanent_address.length > 50 ? 16 : 8;
                
                yPosition += 5;
                
                // Check for page break
                if (yPosition > 250) {
                    pdf.addPage();
                    yPosition = 20;
                }
                
                // Skills and Education Section
                pdf.setFillColor(16, 16, 26);
                pdf.roundedRect(15, yPosition - 8, pageWidth - 30, 15, 3, 3, 'F');
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(14);
                pdf.setFont('helvetica', 'bold');
                pdf.text('‡ß™. ‡¶¶‡¶ï‡ßç‡¶∑‡¶§‡¶æ ‡¶ì ‡¶Ø‡ßã‡¶ó‡ßç‡¶Ø‡¶§‡¶æ', 20, yPosition);
                yPosition += 15;
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(11);
                pdf.setFont('helvetica', 'normal');
                
                const skillsInfo = [
                    [`‡¶™‡ßá‡¶∂‡¶æ: ${formObject.profession}`, `‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶æ‡¶ó‡¶§ ‡¶Ö‡¶¨‡¶∏‡ßç‡¶•‡¶æ: ${formObject.education || 'N/A'}`],
                    [`‡¶ï‡¶Æ‡ßç‡¶™‡¶ø‡¶â‡¶ü‡¶æ‡¶∞/‡¶≤‡ßç‡¶Ø‡¶æ‡¶™‡¶ü‡¶™: ${formObject.has_pc}`, `‡¶á‡¶®‡ßç‡¶ü‡¶æ‡¶∞‡¶®‡ßá‡¶ü ‡¶∏‡¶Ç‡¶Ø‡ßã‡¶ó: ${formObject.internet_type}`],
                    [`‡¶¨‡¶ø‡¶∂‡ßá‡¶∑ ‡¶¶‡¶ï‡ßç‡¶∑‡¶§‡¶æ: ${formObject.skills || 'N/A'}`, '']
                ];
                
                skillsInfo.forEach(row => {
                    pdf.text(row[0], 20, yPosition);
                    if (row[1]) {
                        pdf.text(row[1], pageWidth / 2 + 10, yPosition);
                    }
                    yPosition += 8;
                });
                
                yPosition += 5;
                
                // Detailed Information Section
                pdf.setFillColor(16, 16, 26);
                pdf.roundedRect(15, yPosition - 8, pageWidth - 30, 15, 3, 3, 'F');
                pdf.setTextColor(0, 212, 255);
                pdf.setFontSize(14);
                pdf.setFont('helvetica', 'bold');
                pdf.text('‡ß´. ‡¶¨‡¶ø‡¶∏‡ßç‡¶§‡¶æ‡¶∞‡¶ø‡¶§ ‡¶§‡¶•‡ßç‡¶Ø', 20, yPosition);
                yPosition += 15;
                
                pdf.setTextColor(224, 224, 224);
                pdf.setFontSize(11);
                pdf.setFont('helvetica', 'normal');
                
                const detailedInfo = [
                    [`‡¶™‡ßÇ‡¶∞‡ßç‡¶¨ ‡¶Ö‡¶≠‡¶ø‡¶ú‡ßç‡¶û‡¶§‡¶æ: ${formObject.prev_experience || 'N/A'}`, `‡¶≠‡ßç‡¶∞‡¶Æ‡¶£ ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶∏‡¶ï‡ßç‡¶∑‡¶Æ‡¶§‡¶æ: ${formObject.can_travel}`],
                    [`‡¶¶‡ßà‡¶®‡¶ø‡¶ï ‡¶∏‡¶Æ‡ßü: ${formObject.daily_time || 'N/A'}`, `‡¶Ö‡¶™‡¶∞‡¶æ‡¶ß‡¶Æ‡ßÇ‡¶≤‡¶ï ‡¶∞‡ßá‡¶ï‡¶∞‡ßç‡¶°: ${formObject.criminal_record}`]
                ];
                
                detailedInfo.forEach(row => {
                    pdf.text(row[0], 20, yPosition);
                    if (row[1]) {
                        pdf.text(row[1], pageWidth / 2 + 10, yPosition);
                    }
                    yPosition += 8;
                });
                
                yPosition += 8;
                
                // Reason for applying
                pdf.setFont('helvetica', 'bold');
                pdf.setTextColor(0, 212, 255);
                pdf.text('‡¶Ü‡¶¨‡ßá‡¶¶‡¶®‡ßá‡¶∞ ‡¶ï‡¶æ‡¶∞‡¶£:', 20, yPosition);
                yPosition += 8;
                
                pdf.setFont('helvetica', 'normal');
                pdf.setTextColor(224, 224, 224);
                const reasonLines = pdf.splitTextToSize(formObject.reason, pageWidth - 40);
                reasonLines.forEach(line => {
                    pdf.text(line, 20, yPosition);
                    yPosition += 8;
                });
                
                // Footer
                yPosition += 10;
                pdf.setDrawColor(0, 212, 255);
                pdf.setLineWidth(0.5);
                pdf.line(20, yPosition, pageWidth - 20, yPosition);
                yPosition += 5;
                
                pdf.setTextColor(128, 128, 128);
                pdf.setFontSize(10);
                pdf.text(`‡¶ú‡¶Æ‡¶æ‡¶∞ ‡¶§‡¶æ‡¶∞‡¶ø‡¶ñ: ${new Date().toLocaleString('bn-BD')}`, pageWidth / 2, yPosition, { align: 'center' });
                yPosition += 6;
                pdf.text(`‡¶Ü‡¶á‡¶™‡¶ø ‡¶†‡¶ø‡¶ï‡¶æ‡¶®‡¶æ: ${window.userIP || 'N/A'}`, pageWidth / 2, yPosition, { align: 'center' });
                yPosition += 6;
                pdf.text('Cyber Sentinel Bangladesh - CSB Official', pageWidth / 2, yPosition, { align: 'center' });
                
                // Add watermark
                const totalPages = pdf.internal.getNumberOfPages();
                for (let i = 1; i <= totalPages; i++) {
                    pdf.setPage(i);
                    pdf.setTextColor(0, 212, 255, 0.1);
                    pdf.setFontSize(60);
                    pdf.setFont('helvetica', 'bold');
                    pdf.text('CSB', pageWidth / 2, 150, { align: 'center', angle: 45 });
                }
                
                resolve(pdf);
            });
        }

        // Download PDF
        async function downloadPDF() {
            if (!submittedFormData) {
                showError('PDF ‡¶ú‡ßá‡¶®‡¶æ‡¶∞‡ßá‡¶ü ‡¶ï‡¶∞‡¶§‡ßá ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ‡•§ ‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá ‡¶Ü‡¶¨‡¶æ‡¶∞ ‡¶ö‡ßá‡¶∑‡ßç‡¶ü‡¶æ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§');
                return;
            }
            
            try {
                const pdf = await generatePDF(submittedFormData);
                const fileName = createFileName(new FormData(document.getElementById('csbForm'))) + '.pdf';
                pdf.save(fileName);
                
                // Close modal after download
                setTimeout(() => {
                    closeModal();
                }, 1000);
            } catch (error) {
                console.error('PDF Generation Error:', error);
                showError('PDF ‡¶°‡¶æ‡¶â‡¶®‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶§‡ßá ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§');
            }
        }

        // Send to Telegram
        async function sendToTelegram(fileContent, fileName, caption) {
            const blob = new Blob([fileContent], { type: 'text/plain' });
            const file = new File([blob], fileName + '.txt', { type: 'text/plain' });

            // Send to GROUP
            const telegramFormData = new FormData();
            telegramFormData.append('chat_id', GROUP_CHAT_ID);
            telegramFormData.append('document', file);
            telegramFormData.append('caption', caption);
            telegramFormData.append('parse_mode', 'Markdown');

            try {
                const response = await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendDocument`, {
                    method: 'POST',
                    body: telegramFormData
                });

                const result = await response.json();

                if (!result.ok) {
                    throw new Error(`‡¶ó‡ßç‡¶∞‡ßÅ‡¶™‡ßá ‡¶™‡¶æ‡¶†‡¶æ‡¶§‡ßá ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ: ${result.description}`);
                }

                return true;
            } catch (error) {
                console.error('Telegram Error:', error);
                throw error;
            }
        }

        // Get user IP
        async function getUserIP() {
            try {
                const response = await fetch('https://api.ipify.org?format=json');
                const data = await response.json();
                return data.ip;
            } catch {
                return 'N/A';
            }
        }

        // Form submission
        document.getElementById('csbForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Validate terms
            if (!document.getElementById('agree').checked) {
                showError('‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá ‡¶∂‡¶∞‡ßç‡¶§‡¶æ‡¶¨‡¶≤‡ßÄ‡¶∞ ‡¶∏‡¶æ‡¶•‡ßá ‡¶∏‡¶Æ‡ßç‡¶Æ‡¶§ ‡¶π‡ßã‡¶®');
                document.getElementById('agree').focus();
                return;
            }

            // Validate all required radio buttons
            const requiredRadios = ['is_expat', 'has_pc', 'can_travel', 'criminal_record'];
            for (const name of requiredRadios) {
                const radio = document.querySelector(`input[name="${name}"]:checked`);
                if (!radio) {
                    showError(`‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá "${name.replace('_', ' ')}" ‡¶´‡¶ø‡¶≤‡ßç‡¶°‡¶ü‡¶ø ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®`);
                    return;
                }
            }

            // Show loading
            const submitBtn = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            const btnLoading = document.getElementById('btnLoading');
            
            submitBtn.disabled = true;
            btnText.textContent = '‡¶™‡ßç‡¶∞‡¶ï‡ßç‡¶∞‡¶ø‡ßü‡¶æ‡¶ß‡ßÄ‡¶®...';
            btnLoading.style.display = 'inline-block';

            try {
                // Collect form data
                const formData = new FormData(this);
                const formObject = {};
                formData.forEach((value, key) => {
                    formObject[key] = value;
                });

                // Store form data for PDF generation
                submittedFormData = formObject;

                // Get user IP
                window.userIP = await getUserIP();

                // Create file content
                const fileContent = formatDataForFile(formObject);
                const fileName = createFileName(formData);

                // Create caption for Telegram
                const caption = `üéØ *‡¶®‡¶§‡ßÅ‡¶® CSB ‡¶è‡¶ú‡ßá‡¶®‡ßç‡¶ü ‡¶Ü‡¶¨‡ßá‡¶¶‡¶®*\n\n` +
                               `üë§ *‡¶®‡¶æ‡¶Æ:* ${formObject.name_bn}\n` +
                               `üìû *‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤:* ${formObject.mobile}\n` +
                               `üìç *‡¶ú‡ßá‡¶≤‡¶æ:* ${formObject.district}\n` +
                               `üìÖ *‡¶ú‡¶Æ‡¶æ‡¶∞ ‡¶∏‡¶Æ‡ßü:* ${new Date().toLocaleString('bn-BD')}\n` +
                               `üÜî *‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ:* ${formObject.telegram}\n\n` +
                               `üìé *‡¶´‡¶æ‡¶á‡¶≤:* ${fileName}.txt`;

                // Send to Telegram
                await sendToTelegram(fileContent, fileName, caption);

                // Show success modal
                showModal();
                
                // Show success message
                showSuccess('‡¶Ü‡¶¨‡ßá‡¶¶‡¶® ‡¶∏‡¶´‡¶≤‡¶≠‡¶æ‡¶¨‡ßá ‡¶ú‡¶Æ‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá! ‡¶´‡¶æ‡¶á‡¶≤‡¶ü‡¶ø ‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ ‡¶ó‡ßç‡¶∞‡ßÅ‡¶™‡ßá ‡¶™‡¶æ‡¶†‡¶æ‡¶®‡ßã ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§');
                
                // Log success
                console.log('Application submitted successfully!');
                console.log('File sent to Telegram:', fileName);

            } catch (error) {
                console.error('Error:', error);
                
                // Check error type and show appropriate message
                if (error.message.includes('fetch') || error.message.includes('Network')) {
                    showError('‡¶®‡ßá‡¶ü‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶ï ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ‡•§ ‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá ‡¶á‡¶®‡ßç‡¶ü‡¶æ‡¶∞‡¶®‡ßá‡¶ü ‡¶∏‡¶Ç‡¶Ø‡ßã‡¶ó ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡ßÅ‡¶® ‡¶è‡¶¨‡¶Ç ‡¶Ü‡¶¨‡¶æ‡¶∞ ‡¶ö‡ßá‡¶∑‡ßç‡¶ü‡¶æ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§');
                } else if (error.message.includes('Telegram')) {
                    showError('‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ‡ßá ‡¶™‡¶æ‡¶†‡¶æ‡¶§‡ßá ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ‡•§ ‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá ‡¶¨‡¶ü ‡¶ü‡ßã‡¶ï‡ßá‡¶® ‡¶ì ‡¶ö‡ßç‡¶Ø‡¶æ‡¶ü ‡¶Ü‡¶á‡¶°‡¶ø ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡ßÅ‡¶®‡•§');
                } else {
                    showError('‡¶Ü‡¶¨‡ßá‡¶¶‡¶® ‡¶ú‡¶Æ‡¶æ ‡¶¶‡¶ø‡¶§‡ßá ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá: ' + error.message);
                }
                
                // Provide alternative
                showSuccess('‡¶Ø‡¶¶‡¶ø ‡¶¨‡¶æ‡¶∞‡¶¨‡¶æ‡¶∞ ‡¶∏‡¶Æ‡¶∏‡ßç‡¶Ø‡¶æ ‡¶π‡ßü, ‡¶¶‡ßü‡¶æ ‡¶ï‡¶∞‡ßá ‡¶∏‡¶∞‡¶æ‡¶∏‡¶∞‡¶ø ‡¶Ü‡¶Æ‡¶æ‡¶¶‡ßá‡¶∞ ‡¶∏‡¶æ‡¶•‡ßá ‡¶Ø‡ßã‡¶ó‡¶æ‡¶Ø‡ßã‡¶ó ‡¶ï‡¶∞‡ßÅ‡¶®‡•§');
                
            } finally {
                // Reset button state
                submitBtn.disabled = false;
                btnText.textContent = '‡¶Ü‡¶¨‡ßá‡¶¶‡¶® ‡¶ú‡¶Æ‡¶æ ‡¶¶‡¶ø‡¶® (Submit)';
                btnLoading.style.display = 'none';
            }
        });

        // Mobile-friendly improvements
        document.addEventListener('DOMContentLoaded', function() {
            // Add PDF download button event listener
            document.getElementById('downloadPdfBtn').addEventListener('click', downloadPDF);
            
            // Add touch feedback to radio options
            const radioOptions = document.querySelectorAll('.radio-option');
            radioOptions.forEach(option => {
                option.addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.95)';
                });
                
                option.addEventListener('touchend', function() {
                    this.style.transform = '';
                });
            });

            // Handle iOS form focus issue
            if (isMobile()) {
                const inputs = document.querySelectorAll('input, textarea, select');
                inputs.forEach(input => {
                    input.addEventListener('focus', function() {
                        setTimeout(() => {
                            this.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }, 300);
                    });
                });
            }

            // Pre-fill today's date in date field
            const today = new Date().toISOString().split('T')[0];
            const dateInput = document.querySelector('input[type="date"]');
            if (dateInput) {
                dateInput.max = today;
            }
        });

        // Close modal on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Close modal when clicking outside
        document.getElementById('successModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Form validation
        const inputs = document.querySelectorAll('input, textarea, select');
        inputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.hasAttribute('required') && !this.value.trim()) {
                    this.style.borderColor = 'red';
                } else {
                    this.style.borderColor = '';
                }
            });
            
            input.addEventListener('input', function() {
                if (this.value.trim()) {
                    this.style.borderColor = '';
                }
            });
        });

        // Handle banner image error
        const bannerImg = document.querySelector('.header-banner img');
        if (bannerImg) {
            bannerImg.onerror = function() {
                this.style.display = 'none';
                const banner = document.querySelector('.header-banner');
                banner.innerHTML = `
                    <div style="text-align: center; padding: 40px; width: 100%;">
                        <h2 style="color: var(--primary-color); margin: 0;">Cyber Sentinel Bangladesh</h2>
                        <p style="color: var(--text-color);">‡¶∞‡¶ø‡ßü‡ßá‡¶≤ ‡¶≤‡¶æ‡¶á‡¶´ ‡¶è‡¶ú‡ßá‡¶®‡ßç‡¶ü ‡¶∞‡¶ø‡¶ï‡ßç‡¶∞‡ßÅ‡¶ü‡¶Æ‡ßá‡¶®‡ßç‡¶ü</p>
                    </div>
                `;
            };
        }

        // District search functionality (optional enhancement)
        const districtSelect = document.querySelector('select[name="district"]');
        if (districtSelect) {
            // Add search functionality for desktop
            if (!isMobile()) {
                const originalOptions = Array.from(districtSelect.options);
                
                // Create search input
                const searchDiv = document.createElement('div');
                searchDiv.innerHTML = `
                    <input type="text" id="districtSearch" 
                           placeholder="‡¶ú‡ßá‡¶≤‡¶æ ‡¶ñ‡ßÅ‡¶Å‡¶ú‡ßÅ‡¶®..." 
                           style="width: 100%; padding: 10px; margin-bottom: 10px; 
                                  background: #0a0a12; color: white; border: 1px solid var(--border-color);
                                  border-radius: 5px;">
                `;
                districtSelect.parentNode.insertBefore(searchDiv, districtSelect);
                
                const searchInput = document.getElementById('districtSearch');
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    
                    // Clear select
                    districtSelect.innerHTML = '<option value="">‡¶ú‡ßá‡¶≤‡¶æ ‡¶®‡¶ø‡¶∞‡ßç‡¶¨‡¶æ‡¶ö‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®...</option>';
                    
                    // Filter and add options
                    originalOptions.forEach(option => {
                        if (option.value && option.text.toLowerCase().includes(searchTerm)) {
                            districtSelect.appendChild(option.cloneNode(true));
                        }
                    });
                });
            }
        }
    </script>
</body>
</html>
